<div class="container">
  <h1><%= @restaurant.name %></h1>
  <p><%= @restaurant.address %></p>
  <hr>
  <h2>Reviews</h2>
  <% @reviews.each do |review|%>
    <p><%= review.content %> <%="⭐️" * review.rating%></p>
  <% end %>

  <div class="container">
  <%= simple_form_for [ @restaurant, @review ] do |f| %>
  <div class="form-inputs">
    <%= f.input :content %>
    <%= f.input :rating, :collection => 0..5 %>
    <%= f.submit %>
  </div>
  <% end %>
</div>

  <%= link_to "Add new review", new_restaurant_review_path(@restaurant) %>
  <%= link_to "Back to list", restaurants_path %>
</div>
